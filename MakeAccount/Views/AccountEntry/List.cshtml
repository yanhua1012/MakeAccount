@using MakeAccount.Models
@model IEnumerable<AccountBookViewModels>
@{
    Layout = null;
    int sn = 1;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @foreach (var accountEntry in Model)
            {
                <tr>
                    <td>
                        @(sn++)
                    </td>
                    <td>
                        @(accountEntry.AccountType == EnumAccountType.Expense ? "支出" : "收入")
                    </td>
                    <td>
                        @accountEntry.KeepDate.ToString("yyyy-MM-dd")
                    </td>
                    <td>
                        @accountEntry.Amount.ToString("#,##0")
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
