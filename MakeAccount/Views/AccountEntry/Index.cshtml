@using MakeAccount.Models;
@model AccountBookViewModels
@{
    ViewBag.Title = "我的記帳本";
    Layout = "~/Views/Shared/_MoneyTemplete.cshtml";
}

<div class="well">
    @using (Html.BeginForm("Index", "AccountEntry", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group" >
            @Html.LabelFor(m => m.AccountType, "類別", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(m => m.AccountType , "請選擇", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AccountType, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Amount, "金額", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @*@Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })*@
                @Html.EditorFor(m => m.Amount, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.KeepDate, "日期", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @*@Html.TextBoxFor(m => m.KeepDate, new { @class = "form-control datepicker" })*@
                @Html.EditorFor(m => m.KeepDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.KeepDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Memo, "備註", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Memo, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>

@Html.Action("List")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
